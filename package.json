{
  "name": "repet",
  "private": true,
  "version": "0.2.3",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:offline": "vite --config vite.config.offline.ts",
    "dev:online": "vite --config vite.config.online.ts",
    "prebuild": "npm run lint && npm run type-check",
    "build": "npm run build:offline && npm run build:online",
    "prebuild:offline": "npm run lint && npm run type-check",
    "build:offline": "npm run bump-version:build && vite build --config vite.config.offline.ts --outDir dist-offline",
    "prebuild:online": "npm run lint && npm run type-check",
    "build:online": "npm run bump-version:build && vite build --config vite.config.online.ts --outDir dist-online",
    "preview": "vite preview",
    "preview:offline": "vite preview --outDir dist-offline",
    "preview:online": "vite preview --outDir dist-online",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "download-models": "node scripts/download-piper-models.js",
    "postinstall": "node scripts/download-piper-models.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:report": "playwright show-report",
    "deploy": "npm run build && echo 'Build complete! Deploy dist-offline/ to app.repet.com and dist-online/ to ios.repet.com'",
    "deploy:offline": "npm run build:offline && echo 'Build offline complete! Deploy dist-offline/ to app.repet.com'",
    "deploy:online": "npm run build:online && echo 'Build online complete! Deploy dist-online/ to ios.repet.com'",
    "deploy:netlify": "netlify deploy --prod",
    "deploy:vercel": "vercel --prod",
    "bump-version": "node scripts/bump-version.js",
    "bump-version:patch": "node scripts/bump-version.js patch",
    "bump-version:minor": "node scripts/bump-version.js minor",
    "bump-version:major": "node scripts/bump-version.js major",
    "bump-version:build": "echo 'Build with version' $(node -p \"require('./package.json').version\")"
  },
  "dependencies": {
    "@mintplex-labs/piper-tts-web": "^1.0.4",
    "dexie": "^4.0.11",
    "dexie-react-hooks": "^1.1.7",
    "html2canvas": "^1.4.1",
    "jspdf": "^4.0.0",
    "onnxruntime-web": "^1.23.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.18.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "jsdom": "^27.4.0",
    "piper-wasm": "^0.1.4",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "puppeteer": "^24.35.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.0.7",
    "vite-plugin-pwa": "^0.21.1",
    "vite-plugin-static-copy": "^3.1.4",
    "vitest": "^4.0.16"
  }
}
